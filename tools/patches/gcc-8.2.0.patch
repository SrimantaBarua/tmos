diff --git a/gcc/config/shuos.h b/gcc/config/shuos.h
new file mode 100644
index 000000000..b79ad1ca9
--- /dev/null
+++ b/gcc/config/shuos.h
@@ -0,0 +1,33 @@
+// (C) 2018 Srimanta Barua
+//
+// Configuration of the toolchain for building shuos
+
+#undef  TARGET_SHUOS
+#define TARGET_SHUOS 1
+
+// Default arguments when running *-shuos toolchain
+#undef  LIB_SPEC
+#define LIB_SPEC "-lc" /* link against the C standard library */
+
+// Files that are linked before user code
+#undef  STARTFILE_SPEC
+#define STARTFILE_SPEC "crt0.o%s crti.o%s crtbegin.o%s"
+
+// Files that are linked after user code
+#undef  ENDFILE_SPEC
+#define ENDFILE_SPEC "crtend.o%s crtn.o%s"
+
+// Don't automatically add "extern C { }" around headers
+#undef  NO_IMPLICIT_EXTERN_C
+#define NO_IMPLICIT_EXTERN_C 1
+
+// Additional predefined macros
+#undef TARGET_OS_CPP_BUILTINS
+#define TARGET_OS_CPP_BUILTINS()             \
+	do {                                 \
+		builtin_define("__shuos__"); \
+	} while(0);
+
+// Force 4KB alignment of sections on 64-bit systems (LD defaults to 2MB)
+#undef  LINK_SPEC
+#define LINK_SPEC "-z max-page-size=4096"
